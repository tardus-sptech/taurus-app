<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CategoriasFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:background="@drawable/home_infos"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:paddingHorizontal="18dp">

            <TextView
                android:text="@string/title_categorias"
                style="@style/titles"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:gravity="center_vertical"
                android:background="@drawable/balanco_geral"
                android:padding="14dp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center_vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:id="@+id/gastoTotal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="R$ 0,00"
                            android:textStyle="bold"
                            android:letterSpacing="0.1"
                            android:textSize="26sp"
                            android:layout_marginBottom="10dp"
                            android:textColor="#201F22"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">


                        <TextView
                            android:id="@+id/valorTotal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="BalanÃ§o Geral"
                            android:textStyle="bold"
                            android:textSize="12sp"
                            android:textColor="#9399AB"/>


                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="8"
                    android:gravity="center">

                    <androidx.appcompat.widget.AppCompatButton
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:background="@drawable/adic_icon_categorias"
                        />

                </LinearLayout>
            </LinearLayout>




        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="14dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:orientation="vertical"
                android:paddingHorizontal="18dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/balanco_geral"
                android:gravity="center">

                <com.github.mikephil.charting.charts.PieChart
                    android:id="@+id/pieChart"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"/>

                <TextView
                    android:id="@+id/teste"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/pieChart"
                    android:padding="16dp"
                    android:textSize="16sp" />

            </LinearLayout>



        </LinearLayout>
    </LinearLayout>

</FrameLayout>