<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AppTaurus" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/primary_color</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="containerIntro">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:background">@color/white</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="imageIntro">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">222dp</item>
        <item name="android:layout_marginTop">100dp</item>
    </style>

    <style name="containerTextIntro">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">70dp</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="titleIntro">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/title</item>
    </style>

    <style name="textIntro">
        <item name="android:layout_width">260dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/text_intro</item>
    </style>

    <style name="imagePageIntro">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">42dp</item>
    </style>

    <style name="buttonIntro">
        <item name="android:layout_width">330dp</item>
        <item name="android:layout_height">54dp</item>
        <item name="android:layout_marginTop">72dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/prox_button</item>
        <item name="android:text">@string/button_intro</item>
    </style>

    <style name="buttonLogin">
        <item name="android:layout_width">330dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/login_button</item>
        <item name="android:text">entrar</item>
        <item name="android:textColor">#fff</item>
    </style>

    <style name="buttonCadastroTela">
        <item name="android:layout_width">330dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/login_button</item>
        <item name="android:text">@string/btn_cad_tela</item>
        <item name="android:textColor">#fff</item>
    </style>

    <style name="buttonCadastro">
        <item name="android:layout_width">330dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/cadastro_button</item>
        <item name="android:layout_marginTop">18dp</item>
        <item name="android:text">cadastrar</item>
        <item name="android:textColor">@color/primary_color</item>
    </style>

    <style name="title_cad">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">28sp</item>
        <item name="android:text">@string/title_cadastro</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/title</item>
        <item name="android:layout_marginBottom">52dp</item>
    </style>

    <style name="title_log">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">28sp</item>
        <item name="android:text">@string/title_cadastro</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/title</item>
    </style>

    <style name="inputs_cadastro">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">@color/primary_color</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingBottom">14dp</item>
        <item name="android:textColor">@color/primary_color</item>
        <item name="android:textColorHint">@color/black</item>

    </style>

    <style name="titles">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">24sp</item>
        <item name="android:letterSpacing">0.05</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:text">@string/title_home</item>
        <item name="android:layout_marginTop">8dp</item>

    </style>

</resources>